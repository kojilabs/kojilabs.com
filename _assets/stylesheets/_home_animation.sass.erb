#home-feature
	position: relative
	overflow: hidden
	background: url(<%= asset_path 'congruent_outline.png' %>)
	// background-repeat: no-repeat
	// background-size: cover
	// background-position: 30% 0%

	// .wrapper
	// 	position: absolute
	// 	top: 0
	// 	bottom: 0
	// 	left: 0
	// 	right: 0
	// 	background: rgba(0, 0, 0, 0.45)

	.ball
		position: absolute
		z-index: 997
		border-radius: 200px
		// background: #3C3C3C
		background: $green
		// border: 2px solid #000
		width: 0
		height: 0
		color: transparent
		overflow: hidden
		-webkit-backface-visibility: hidden
		-webkit-transition: translate3d(0,0,0)

		&.one
			left: 20%
			top: 50%
			// background: $purple

		&.two
			left: 55%
			top: 15%
			// background: $blue

		&.three
			left: 80%
			top: 70%
			// background: $green

		&.four
			left: 45%
			top: 80%
			// background: $orange

	.brand
		position: relative
		z-index: 998
		// margin-top: 2.95em
		margin-top: 2.65em
		margin-bottom: 0
		line-height: 1
		font-size: 5em
		font-weight: bold
		text-align: center
		text-transform: uppercase
		color: #FFF
		// text-shadow: 0 1px 3px rgba(0,0,0,0.8)
		// opacity: 0

	.slogan
		position: relative
		z-index: 998
		text-align: center
		font-size: 1.4em
		margin-top: 0.5em
		font-weight: 300
		color: #FFF
		text-transform: none
		// text-shadow: 0 1px 3px rgba(0,0,0,0.8)
		// opacity: 0

	.home-buttons
		position: relative
		z-index: 998
		text-align: center
		margin-top: $gd_padding*1.75

		a,
		a:visited
			margin: 0 1em

	.play-button
		text-align: center
		margin-top: 7em
		position: relative
		z-index: 998

		a,
		a:visited
			color: #FFF
			font-size: 0.9em

			&:hover,
			&:focus
				font-weight: bold

@media screen and (min-width: 0px) and (max-width: 910px)

	#home-feature

		.brand
			margin-top: 2em

		.play-button
			margin-top: 4em
