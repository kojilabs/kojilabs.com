$purple: #811fab

$light_green: #d2f7d4
$green: #1fab26
$dark_green: #1b9521
$darker_green: #17801c

$orange: #cc8b25

$blue: #1f86ab
$dark_blue: #176480

$light_red: #f9dede
$red: #cc2825
$dark_red: #a1201d

$text_color: #161616
$text_grey: #a2a2a2
$border_color: #ededed

@import "_grid"
@import "_typography"

html
  height: 100%
  text-rendering: optimizelegibility
  -webkit-font-smoothing: antialiased

body
  background: #F2F2F2
  color: $text_color
  font-family: "proxima-nova", Helvetica, Arial, sans-serif
  padding: 0 $gd_padding/2

a,
a:visited
  color: $purple
  text-decoration: none
  transition: color 200ms ease-in-out

  &:hover,
  &:focus
    color: $green

img
  width: 100%

.content-box
  background: #FFF
  position: relative

.text-content
  padding-top: 10em
  padding-bottom: 10em

.extra-vert-padding
  padding-top: 4em
  padding-bottom: 4em

.img-block
  padding-top: 4em
  padding-bottom: 4em

  figcaption
    margin: $gd_padding auto 0
    max-width: 80%
    text-align: center
    color: #BCBCBC
    font-size: 0.9em
    line-height: 1.6

header
  background: #FFF
  height: 80px
  overflow: hidden
  border-top: 0 !important

  .logo
    float: left

    a,
    a:visited
      display: block
      background-color: $purple
      height: 80px
      width: 80px
      transition: background-color 200ms ease-in-out

      &:hover,
      &:focus
        background-color: $green

      img
        width: 80px
        height: 80px

  .contact

    a,
    a:visited
      display: inline-block
      margin-left: $gd_padding
      color: $text_color
      text-decoration: none
      font-weight: bold
      text-transform: uppercase
      font-size: 0.7em
      padding: 3em 0
      letter-spacing: 0.5px

      i
        margin-right: 0.4em
        color: $purple

      &:hover,
      &:focus
        color: $green

  .nav-toggle
    display: none

  nav.site-nav
    float: left

    ul
      padding: 0
      margin: 0
      list-style: none

      li
        display: inline-block

        a,
        a:visited
          display: inline-block
          padding: 3em 2em
          line-height: 1.2
          color: $text_color
          text-decoration: none
          font-weight: bold
          text-transform: uppercase
          letter-spacing: 0.5px
          font-size: 0.7em
          position: relative
          z-index: 999
          transition: none

          &:hover,
          &:focus
            background: #161616
            color: #FFF

          &.current,
          &.current-parent
            color: $purple

          // .plus
          //   position: relative
          //   top: -0.5px

        &:hover
          a,
          a:visited
            background: #161616
            color: #FFF

        ul.sub-nav
          display: none
          position: absolute
          top: 79px
          width: 250px

          &:hover
            display: block

          li
            display: block

          a,
          a:visited
            background: #161616
            color: #FFF
            display: block
            padding: 1.5em 2em

            &.current
              // color: $purple

            &:hover,
            &:focus
              background: $purple
              color: #FFF

        a:hover,
        a:focus
          &+ul.sub-nav
            display: block



#home-feature
  height: 600px
  border: 0 !important

#home-projects,
.portfolio-items

  .project,
  .portfolio-item
    height: 250px
    padding-left: 0
    padding-right: 0
    position: relative
    overflow: hidden
    border-top: 1px solid $border_color
    border-left: 1px solid $border_color
    transition: background 200ms ease-in-out, border 200ms ease-in-out

    &.no-border
      border-left: 0 !important

    &.no-border-top
      border-top: 0 !important

    &:hover
      background-color: $purple
      border-color: transparent

    a,
    a:visited
      display: block
      height: 250px
      color: $text_color

      &:hover,
      &:focus
        color: $text_color

    .project-image
      width: 100%
      height: 250px
      opacity: 1
      transition: opacity 200ms ease-in-out
      background-repeat: no-repeat
      background-position: 50% 50%

      &.wlcome
        height: 264px
        background-image: url(<%= asset_path 'wlcome-logo.png' %>)

      &.lovehatefilms
        // height: 216px
        background-image: url(<%= asset_path 'lovehatefilms-logo.png' %>)

      &.idyia
        // height: 234px
        background-image: url(<%= asset_path 'idyia-logo.png' %>)

      &.pci
        // height: 216px
        background-image: url(<%= asset_path 'pci-logo.png' %>)

      &.johannagilbert
        background-image: url(<%= asset_path 'johannagilbert-logo.png' %>)

      &.locarn
        background-image: url(<%= asset_path 'locarn-logo.png' %>)

      &.kojitsu
        background-image: url(<%= asset_path 'kojitsu-logo.png' %>)

      &.html5-foundations
        background-image: url(<%= asset_path 'html5foundations_cover_thumb.png' %>)

      &.seaton-gifts
        background-image: url(<%= asset_path 'seaton-gifts-logo.png' %>)

    .project-info
      padding: 1.4em $gd_padding
      position: absolute
      width: 100%
      left: 0
      bottom: 0
      transition: top 200ms ease-in-out, background 200ms ease-in-out, color 200ms ease-in-out

      .project-title
        font-weight: bold
        line-height: 1.6
        color: #FFF

      .project-tech
        color: #FFF
        font-size: 0.9em
        transition: color 200ms ease-in-out

    &:hover
      .project-image
        opacity: 0

  .portfolio-item
    border: 0

.portfolio-items
  padding-top: $gd_padding

#home-blog,
#home-code-blog
  .post
    min-height: 165px
    padding: $gd_padding
    transition: background 200ms ease-in-out, border 200ms ease-in-out
    border-top: 1px solid $border_color
    border-left: 1px solid $border_color
    // text-align: center

    &.no-border
      border-left: 0 !important

    a,
    a:visited
      display: block
      color: $text_color
      transition: color 200ms ease-in-out

      &:hover,
      &:focus
        color: #FFF

    h3
      font-size: 1.6em
      margin: 0
      line-height: 1.25
      font-weight: 600

    .home-post-info
      font-size: 0.9em
      margin-top: 1.25em
      color: $text_grey
      transition: color 200ms ease-in-out

      img
        height: 24px
        width: 24px
        border-radius: 24px
        vertical-align: middle

      div
        display: inline
        line-height: 24px
        vertical-align: middle

      .home-post-author
        margin-left: 0.5em
        font-weight: bold
        color: $green

      .home-post-date
        margin-left: 1px

    &:hover
      background: $purple
      border-color: transparent

      h3
        color: #FFF

      .home-post-info,
      .home-post-author
        color: #FFF


#home-projects,
#home-blog,
#home-code-blog
  h2
    padding: $gd_padding/1.5 $gd_padding
    font-size: 0.9em
    font-weight: 600
    line-height: 1
    color: $text_grey
    letter-spacing: 0.3px

    i
      vertical-align: middle
      margin-left: 0.2em
      color: #D9D9D9

    a,
    a:visited
      color: $text_grey

      &:hover,
      &:focus
        color: $green

        i
          color: $green

table.project-info
  color: #999
  // font-size: 1.1em
  margin: 0 0 $gd_padding*3
  text-align: left

  th,
  td
    padding: 0.5em 0
    text-align: left

  th
    font-weight: bold
    min-width: 186px

    i
      text-align: center
      width: 18px
      margin-right: 0.5em


footer
  padding: $gd_padding*2.5 $gd_padding*2 $gd_padding*1.5 !important
  margin-bottom: 0 !important
  background: #FFF
  border-bottom: 0 !important

  h4
    text-transform: uppercase
    font-size: 1.4em
    line-height: 1
    font-weight: bold
    color: $green

    &.footer-logo
      color: $purple
      font-size: 2em
      text-transform: uppercase

  a,
  a:visited
    color: $text_color

    &:hover,
    &:focus
      color: $purple

  .footer-links
    list-style: none
    margin: 1em 0
    padding: 0

    i
      width: 20px
      margin-right: 5px
      text-align: center

  p
    margin: 1em 0

  p,
  li
    font-size: 0.95em
    line-height: 1.6

    // &.footer-slogan
    //   font-size: 1.1em


  .sub-text
    font-size: 0.9em
    margin-top: $gd_padding
    color: $text_grey

    a,
    a:visited
      color: $text_grey
      margin-left: $gd_padding/2

      &:hover,
      &:focus
        color: $green

    p
      margin-bottom: 0


.testimonial
  padding: $gd_padding*3 0

  blockquote
    margin: 0 0 1em 0
    font-size: 1.3em
    line-height: 1.5
    font-family: "ff-tisa-web-pro"
    font-style: italic
    position: relative
    text-align: left

    &::before
      content: 'â€œ'
      color: #E6E6E6
      font-size: 5em
      display: block
      position: absolute
      left: -0.125em
      top: -0.5em

  .t-info
    text-align: center

  .t-image
    padding-bottom: 1em

    img
      width: 150px
      border-radius: 150px

  .t-author
    padding-bottom: 0.25em
    font-weight: 600

  .t-title
    font-size: 0.9em


@import "_forms"
@import "_buttons"
@import "_blog"


/////////////////////////
// Responsive goodness
/////////////////////////

@media screen and (min-width: 0px) and (max-width: 1100px)
  header
    .contact
      a,
      a:visited
        i
          font-size: 1.2em

        span
          display: none

        &:hover,
        &:focus

          i
            color: $green

  #home-blog,
  #home-code-blog
    .post
      min-height: 195px

@media screen and (min-width: 0px) and (max-width: 910px)
  header
    height: auto

    .contact
      display: none

    nav
      ul
        li
          ul.sub-nav
            // top: 80px

  #home-feature
    height: 400px

    .brand
      font-size: 3.35em !important

    .slogan
      font-size: 1.2em !important

  footer
    padding: $gd_padding*2 ($gd_padding - 0.75em) $gd_padding !important

    .columns
      margin-bottom: $gd_padding

    .sub-text
      text-align: left

      a,
      a:visited
        margin-left: 0

@media screen and (min-width: 0px) and (max-width: 910px)
  header
    .logo
      width: 25%
      text-align: center

      a,
      a:visited
        width: 100%
        height: 60px

        img
          width: 60px
          height: 60px

    .nav-toggle
      float: right
      width: 75%
      display: block

      a,
      a:visited
        display: block
        font-weight: bold
        text-align: center
        height: 60px
        line-height: 60px
        background: $text_color
        color: #FFF
        font-size: 0.8em
        text-transform: uppercase

        &:hover,
        &:focus
          background: $green

        &:active
          background: $dark_green

        &.active
          background: $green

          &:hover,
          &:focus
            background: $dark_green

          &:active
            background: $darker_green

    nav
      float: none
      display: block
      clear: both
      display: none

      ul
        li
          display: block

          a,
          a:visited
            display: block
            padding: 2em 2em
            background: $text_color
            color: #FFF

            &.current
              color: $green

            &:hover,
            &:focus
              background: $purple
              color: #FFF

        &.sub-nav
          display: none !important

  .text-content
    padding-top: 5em
    padding-bottom: 5em

  .img-block
    padding: 2em 0

    figcaption
      max-width: 90%

  h1
    font-size: 3em

  h2
    font-size: 1.6em

  p.first
    font-size: 1.2em

  p,
  li
    line-height: 1.7

  #home-blog .post,
  #home-code-blog .post
    min-height: 0

  .testimonial
    .t-info
      margin-bottom: $gd_padding


@media screen and (min-width: 0px) and (max-width: 860px)
  dl.numbered
    padding: 0 0 0 4em


@import "_home_animation"
