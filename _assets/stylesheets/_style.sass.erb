$purple: #811fab
$dark_purple: darken(#811fab, 5%)

$light_green: #d2f7d4
$green: #1fab26
$dark_green: #1b9521
$darker_green: #17801c

$dark_grey: #262626

$orange: #cc8b25

$blue: #1f86ab
$dark_blue: #176480

$light_red: #f9dede
$red: #cc2825
$dark_red: #a1201d

$text_color: #161616
$text_grey: #a2a2a2
$border_color: #ededed

@import "_grid"
@import "_typography"

html
  height: 100%
  text-rendering: optimizelegibility
  -webkit-font-smoothing: antialiased

body
  background: $dark_grey
  color: $text_color
  font-family: "proxima-nova", Helvetica, Arial, sans-serif

a,
a:visited
  color: $purple
  text-decoration: none
  transition: color 200ms ease-in-out

  &:hover,
  &:focus
    color: $green

img
  width: 100%

  &.owner-img
    width: auto
    float: left
    margin-right: 1.2em
    width: 58px
    +border-radius(49px)

.team-member
  margin: 0 0 $gd_padding 0
  line-height: 1.8

  h3
    margin-bottom: 0.3em

.content-box
  background: #FFF
  position: relative

.text-content
  padding-top: 10em
  padding-bottom: 10em

.extra-vert-padding
  padding-top: 4em
  padding-bottom: 4em

.img-block
  padding-top: 4em
  padding-bottom: 4em

  figcaption
    margin: $gd_padding auto 0
    max-width: 80%
    text-align: center
    color: #BCBCBC
    font-size: 0.9em
    line-height: 1.6

#sidebar
  position: fixed
  left: 0
  top: 0
  width: 200px
  z-index: 999

header

  .logo

    a,
    a:visited
      display: block
      background-color: $purple
      height: 200px
      width: 200px
      transition: background-color 200ms ease-in-out

      &:hover,
      &:focus
        background-color: $green

      img
        width: 160px
        height: 160px
        margin: 20px

  .nav-toggle
    display: none

  nav.site-nav

    ul
      padding: 0
      margin: 0
      list-style: none

      li
        display: block
        position: relative

        a,
        a:visited
          display: block
          padding: 2em 2em
          line-height: 1.2
          color: #FFF
          text-decoration: none
          font-weight: bold
          text-transform: uppercase
          letter-spacing: 0.5px
          font-size: 0.7em
          position: relative
          z-index: 999
          transition: none

          &:hover,
          &:focus
            background: #161616
            color: #FFF

          &.current,
          &.current-parent
            color: $purple

          // .plus
          //   position: relative
          //   top: -0.5px

        &:hover
          a,
          a:visited
            background: $green
            color: #FFF

        ul.sub-nav
          display: none
          position: absolute
          top: 0
          right: -250px
          width: 250px

          &:hover
            display: block

          li
            display: block

          a,
          a:visited
            background: darken($dark_grey, 3%)
            color: #FFF
            display: block
            padding: 2em 2em

            &.current
              // color: $purple

            &:hover,
            &:focus
              background: $green
              color: #FFF

        a:hover,
        a:focus
          &+ul.sub-nav
            display: block

p.feature-caption
  margin-top: 0
  margin-bottom: 0
  font-size: 0.9em
  font-style: italic
  color: #BABABA
  padding: 0.75em 
  text-align: center

#services
  .home-service
    padding-top: $gd-padding*3
    padding-bottom: $gd-padding*3

  h2
    color: $text-color
    text-transform: none
    letter-spacing: 0
    font-size: 2.8em
    font-weight: 300
    margin: 0.2em 0 0.75em


    &.web-design
      margin-top: 0.8em

  p
    color: #888

#home-projects,
.portfolio-items

  .project,
  .portfolio-item
    height: 250px
    padding-left: 0
    padding-right: 0
    position: relative
    overflow: hidden
    border-top: 1px solid $border_color
    border-left: 1px solid $border_color
    transition: background 200ms ease-in-out, border 200ms ease-in-out

    &.no-border
      border-left: 0 !important

    &.no-border-top
      border-top: 0 !important

    &:hover
      background-color: $purple
      border-color: transparent

    a,
    a:visited
      display: block
      height: 250px
      color: $text_color

      &:hover,
      &:focus
        color: $text_color

    .project-image
      width: 100%
      height: 250px
      opacity: 1
      transition: opacity 200ms ease-in-out
      background-repeat: no-repeat
      background-position: 50% 50%

      &.wlcome
        height: 264px
        background-image: url(<%= asset_path 'wlcome-logo.png' %>)

      &.lovehatefilms
        // height: 216px
        background-image: url(<%= asset_path 'lovehatefilms-logo.png' %>)

      &.idyia
        // height: 234px
        background-image: url(<%= asset_path 'idyia-logo.png' %>)

      &.pci
        // height: 216px
        background-image: url(<%= asset_path 'pci-logo.png' %>)

      &.johannagilbert
        background-image: url(<%= asset_path 'johannagilbert-logo.png' %>)

      &.locarn
        background-image: url(<%= asset_path 'locarn-logo.png' %>)

      &.kojitsu
        background-image: url(<%= asset_path 'kojitsu-logo.png' %>)

      &.html5-foundations
        background-image: url(<%= asset_path 'html5foundations_cover_thumb.png' %>)

      &.seaton-gifts
        background-image: url(<%= asset_path 'seaton-gifts-logo.png' %>)

    .project-info
      padding: 1.4em $gd_padding
      position: absolute
      width: 100%
      left: 0
      bottom: 0
      transition: top 200ms ease-in-out, background 200ms ease-in-out, color 200ms ease-in-out

      .project-title
        font-weight: bold
        line-height: 1.6
        color: #FFF

      .project-tech
        color: #FFF
        font-size: 0.9em
        transition: color 200ms ease-in-out

    &:hover
      .project-image
        opacity: 0

  .portfolio-item
    border: 0

.portfolio-items
  padding-top: $gd_padding

#home-blog,
#home-code-blog
  .post
    min-height: 165px
    padding: $gd_padding
    transition: background 200ms ease-in-out, border 200ms ease-in-out
    border-top: 1px solid $border_color
    border-left: 1px solid $border_color
    // text-align: center

    &.no-border
      border-left: 0 !important

    a,
    a:visited
      display: block
      color: $text_color
      transition: color 200ms ease-in-out

      &:hover,
      &:focus
        color: #FFF

    h3
      font-size: 1.6em
      margin: 0
      line-height: 1.25
      font-weight: 600

    .home-post-info
      font-size: 0.9em
      margin-top: 1.25em
      color: $text_grey
      transition: color 200ms ease-in-out

      img
        height: 24px
        width: 24px
        border-radius: 24px
        vertical-align: middle

      div
        display: inline
        line-height: 24px
        vertical-align: middle

      .home-post-author
        margin-left: 0.5em
        font-weight: bold
        color: $green

      .home-post-date
        margin-left: 1px

    &:hover
      background: $purple
      border-color: transparent

      h3
        color: #FFF

      .home-post-info,
      .home-post-author
        color: #FFF


#home-projects,
#home-blog,
#home-code-blog
  h2
    padding: 1em $gd_padding
    font-size: 1.1em
    font-weight: 400
    line-height: 1
    color: $text_grey
    letter-spacing: 0.3px
    margin: 0
    border-top: 1px solid $border-color
    text-align: center
    background: #FAFAFA

    i
      vertical-align: middle
      margin-left: 0.2em
      color: #D9D9D9

    a,
    a:visited
      color: $text_grey

      &:hover,
      &:focus
        color: $green

        i
          color: $green

table.project-info
  color: #999
  // font-size: 1.1em
  margin: 0 0 $gd_padding*3
  text-align: left

  th,
  td
    padding: 0.5em 0
    text-align: left

  th
    font-weight: bold
    min-width: 186px

    i
      text-align: center
      width: 18px
      margin-right: 0.5em


footer
  padding: $gd_padding*2.5 $gd_padding*2 $gd_padding*1.5 !important
  margin-bottom: 0 !important
  background: #FFF
  border-top: 1px solid $border_color

  h4
    text-transform: uppercase
    font-size: 1.4em
    line-height: 1
    font-weight: bold
    color: $green

    &.footer-logo
      color: $purple
      font-size: 2em
      text-transform: uppercase

  a,
  a:visited
    color: $text_color

    &:hover,
    &:focus
      color: $purple

  .footer-links
    list-style: none
    margin: 1em 0
    padding: 0

    i
      width: 20px
      margin-right: 5px
      text-align: center

  p
    margin: 1em 0

  p,
  li
    font-size: 0.95em
    line-height: 1.6

    // &.footer-slogan
    //   font-size: 1.1em


  .sub-text
    font-size: 0.9em
    margin-top: $gd_padding
    color: $text_grey

    a,
    a:visited
      color: $text_grey
      margin-left: $gd_padding/2

      &:hover,
      &:focus
        color: $green

    p
      margin-bottom: 0


.testimonial
  padding: $gd_padding*3 0

  blockquote
    margin: 0 0 1em 0
    font-size: 1.3em
    line-height: 1.5
    font-family: "ff-tisa-web-pro"
    font-style: italic
    position: relative
    text-align: left

    &::before
      content: 'â€œ'
      color: #E6E6E6
      font-size: 5em
      display: block
      position: absolute
      left: -0.125em
      top: -0.5em

  .t-info
    text-align: center

  .t-image
    padding-bottom: 1em

    img
      width: 150px
      border-radius: 150px

  .t-author
    padding-bottom: 0.25em
    font-weight: 600

  .t-title
    font-size: 0.9em

.fake-browser
  @extend .clearfix
  // min-height: 280px
  border: 1px solid $border_color
  +border-radius(3px)

  .fb-content
    @extend .clearfix
    font-size: 0

    img
      float: left

  .fb-header
    @extend .clearfix
    padding: 11px 13px
    background-color: #e0e0e0
    +background(linear-gradient(#f7f7f7, #dbdbdb))
    border-bottom: 1px solid #d6d6d6

    i
      display: block
      float: left
      width: 10px
      height: 10px
      +border-radius(5px)
      margin-right: 7px
      border: 1px solid rgba(0,0,0,0.1)

      &.close
        background: #e51700

      &.minimize
        background: #ff7300

      &.expand
        background: #00b234

  &.small
    .fb-header
      padding: 9px 10px

      i
        display: block
        float: left
        width: 8px
        height: 8px
        +border-radius(4px)
        margin-right: 6px



@import "_forms"
@import "_buttons"
@import "_blog"


/////////////////////////
// Responsive goodness
/////////////////////////

@media screen and (min-width: 0px) and (max-width: 1200px)
  #sidebar
    width: 180px

  header

    .logo

      a,
      a:visited
        height: 180px
        width: 180px

        img
          margin: 10px

  #services
    h2
      margin: 0.75em 0


@media screen and (min-width: 0px) and (max-width: 1100px)
  #home-blog,
  #home-code-blog
    .post
      min-height: 195px

@media screen and (min-width: 0px) and (max-width: 1000px)
  .post
    padding: $gd_padding

  .blog-sidebar
    padding: $gd_padding

@media screen and (min-width: 0px) and (max-width: 910px)
  #sidebar
    position: relative
    width: 100%

  header
    height: auto

    .logo
      float: left

      a,
      a:visited
        img
          margin: 0

    nav
      ul
        li
          ul.sub-nav
            // top: 80px

  footer
    padding: $gd_padding 0 !important

    .columns
      margin-bottom: $gd_padding

    .sub-text
      text-align: left

      a,
      a:visited
        margin-left: 0

@media screen and (min-width: 0px) and (max-width: 910px)
  header
    .logo
      width: 25%
      text-align: center

      a,
      a:visited
        width: 100%
        height: 60px

        img
          width: 60px
          height: 60px

    .nav-toggle
      float: right
      width: 75%
      display: block

      a,
      a:visited
        display: block
        font-weight: bold
        text-align: center
        height: 60px
        line-height: 60px
        background: $text_color
        color: #FFF
        font-size: 0.8em
        text-transform: uppercase

        &:hover,
        &:focus
          background: $green

        &:active
          background: $dark_green

        &.active
          background: $green

          &:hover,
          &:focus
            background: $dark_green

          &:active
            background: $darker_green

    nav.site-nav
      float: none
      display: block
      clear: both
      display: none

      ul
        li
          display: block

          a,
          a:visited
            display: block
            padding: 2em 2em
            background: $text_color
            color: #FFF

            &.current
              color: $green

            &:hover,
            &:focus
              background: $purple
              color: #FFF

        &.sub-nav
          display: none !important

  .text-content
    padding-top: 5em
    padding-bottom: 5em

  .post
    padding: $gd_padding $gd_padding/2 $gd_padding/2

  .blog-sidebar
    padding: $gd_padding/2

    h1.blog-sidebar-title
      font-size: 1.8em

  .post-list
    .blog-category-title
      padding: 0.75em 1em


  .img-block
    padding: 2em 0

    figcaption
      max-width: 90%

  h1
    font-size: 3em

  h2
    font-size: 1.6em

  p.first
    font-size: 1.2em

  p,
  li
    line-height: 1.7

  #home-blog .post,
  #home-code-blog .post
    min-height: 0

  .testimonial
    .t-info
      margin-bottom: $gd_padding


@media screen and (min-width: 0px) and (max-width: 860px)
  dl.numbered
    padding: 0 0 0 4em


@import "_home_animation"
